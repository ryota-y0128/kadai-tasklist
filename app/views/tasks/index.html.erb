<% if logged_in? %>

<p>ログイン完了ユーザ: 
    <%= current_user.name %></p>
<%= link_to "Logout", logout_path, method: :delete %>

<% else %>
<h1>Welcome to the Tasklist</h1>
<%= link_to "Login", login_path %> 

<% end %>

<h1>タスク一覧</h1>
<ul>
    <% @tasks.each do |task| %>
    <li>
        <%= link_to task.id, task %> : <%= task.content %>
        &gt;
        <%= task.status %>
    </li>
    <% end %>
</ul>

<%= link_to "新規タスクの登録", new_task_path %>